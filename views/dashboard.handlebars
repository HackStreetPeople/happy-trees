{{> nav/nav-block}}

<div id="main-container">

  <div class="jumbotron">
    <h1>Welcome to Happy Trees</h1>
    <h2>A helpful resource in viewing data collected on trees planted by Jordan's company.</h2>
    <hr class="my-4">

    <div>
      {{#if isloggedin}}
      You are logged in as {{user.firstName}}
      <a href="/logout"> <button type="btn" class="btn">Logout</button></a>
      {{else}}
      <p>You need to log in to use this app.</p>
      {{/if}}
      <h5 id="login-err-msg"></h5>
    </div>

  </div>

  <div class="container">

    <div class="upload">
      <h2>UPLOAD TREE DATA:</h2>
      <label for="tree-data" class="data-types">
        Plot ID <input type="text" class="input">
        Scientific Name<input type="text" class="input">
        Height<input type="text" class="input">
        <button type="submit" class="submit">Submit
        </button>
      </label>
    </div>

    <div class="view">
      <h5>VIEW TREE DATA BY:</h5>
      *dropdown menu created with js goes here*
    </div>

  </div>

</div>

{{> modal/login-block}}