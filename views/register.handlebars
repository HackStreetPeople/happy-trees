{{> nav/nav-block user=false register=true}}

{{!-- <div class="container"> --}}

  {{!-- <div class="row"> --}}

    <div class="register">
      <header align="center">
        <h1 class="is-size-2">Create Your Account</h1>
        <h3 id="create-err-msg"></h3>
      </header>

      <h3 id="err-msg"></h3>

          <div class="form-group">
            <label for="inputFirst" class="is-size-4">First Name</label>
            <input type="text" class="form-control is-size-5" id="inputFirst" placeholder="John">
          </div>

          <div class="form-group">
            <label for="inputLast" class="is-size-4">Last Name</label>
            <input type="text" class="form-control is-size-5" id="inputLast" placeholder="Doe">
          </div>

          <div class="form-group">
            <label for="inputEmail" class="is-size-4">Email</label>
            <input type="email" class="form-control is-size-5" id="inputEmail" placeholder="Email">
          </div>

          <div class="form-group">
            <label for="inputPassword" class="is-size-4">Password</label>
            <input type="password" class="form-control is-size-5" id="inputPassword" placeholder="Password">
          </div>

        <div>
          <h2 id="message"></h2>
        </div>

        <button type="submit" id="add-user" class="button is-normal is-success">
          Submit
        </button>
    </div>
  </div>
</div>